{
  "name": "monitoring",
  "version": "1.0.0",
  "description": "Monitoring of the Boltz middleware with Google Cloud functions",
  "main": "dist/index.js",
  "scripts": {
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "lint": "tslint --project tsconfig.json",
    "start": "functions-framework --target checkBoltzStatus",
    "deploy": "cp package.json .gcloudignore dist && cd dist && gcloud functions deploy checkBoltzStatus --runtime nodejs10 --trigger-http && cd .."
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoltzExchange/monitoring.git"
  },
  "dependencies": {
    "@google-cloud/datastore": "^4.0.0",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.1.0",
    "@types/express": "^4.16.1",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-no-circular-imports": "^0.6.2",
    "typescript": "^3.4.5"
  }
}
